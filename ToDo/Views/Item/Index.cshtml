@section Scripts {
    @if (TempData["Notification"] != null)
    {
        <script>
            toastr.success('@TempData["Notification"]')
        </script>
    }
}

<section class="vh-100" style="background-color: #121212; color: #fff;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-9 col-xl-7">
                <div class="card rounded-3" style="background-color: #1e1e1e; box-shadow: 0px 0px 15px rgba(0, 255, 255, 0.3);">
                    <div class="card-body p-4">
                        <h4 class="text-center my-3 pb-3 text-neon">🚀 To Do App</h4>
                        <div class="col-12 mt-4 mb-3 text-center">
                            <a href="/Item/Create" class="btn btn-neon px-4 py-2">Create New Item</a>
                        </div>
                        <table class="table table-dark table-striped mb-4">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Deadline</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach(var item in Model){
                                    <tr>
                                        <th>@item.Title</th>
                                        <td>@item.Description</td>
                                        <td><span class="badge bg-warning">@item.DeadLine</span></td>
                                        <td>
                                            <a href="/Item/Delete?itemId=@item.Id" class="btn btn-danger btn-sm">🗑 Delete</a>
                                            <a href="/Item/Edit?itemId=@item.Id" class="btn btn-success btn-sm ms-1">✅ Edit</a>
                                        </td>
                                    </tr>
                               }
                                
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>