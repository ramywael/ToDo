<div class="container mt-5 text-white">
    <div class="card p-4" style="background-color: #1e1e1e; border-radius: 10px; box-shadow: 0px 0px 15px rgba(0, 255, 255, 0.3);">
        <h2 class="text-center text-neon">Edit Item @Model.Title</h2>

        <form method="post" action="/Item/Edit?itemId=@Model.Id">
            <div class="mb-3">
                <label for="Title" class="form-label">Name</label>
                <input type="text" class="form-control border-neon" id="Title" name="Title" placeholder="Enter item name" required value="@Model.Title">
            </div>

            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <textarea class="form-control border-neon" id="Description" name="Description" rows="3" placeholder="@Model.Description" required></textarea>
            </div>

            <div class="mb-3">
                <label for="Deadline" class="form-label">Deadline</label>
                <input type="datetime-local" class="form-control border-neon" id="Deadline" name="Deadline" required value="@Model.DeadLine.ToString("yyyy-MM-ddTHH:mm")">
            </div>

            <div class="d-flex justify-content-between">
                <a href="/Item/Index" class="btn btn-danger">Cancel</a>
                <button type="submit" class="btn btn-neon">Edit Item</button>
            </div>
        </form>
    </div>
</div>